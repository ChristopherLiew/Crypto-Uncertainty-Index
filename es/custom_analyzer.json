POST /reddit-crypto-custom/_search
{
        "query": {
            "bool": {
                "must": [
                    {"terms": 
                      {"full_text": ["bitcoin", "ethereum", "ripple", "litecoin","tether", "cryptocurrency", "cryptocurrencies"]}
                    },
                    {"wildcard":
                      {"full_text": "pric*"}
                    },
                    {"wildcard": 
                      {"full_text": "uncertain*"}
                    },
                    {"range": 
                      {"create_datetime": {
                        "gte": "2014-01-01",
                        "lte": "2021-12-31"
                      }
                    }
                  }
                ]
            }
        }
    }
    
